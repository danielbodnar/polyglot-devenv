{
    "name": "Polyglot TypeScript Development Environment",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:20-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20",
            "nodeGypDependencies": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-typescript-next",
                "bradlc.vscode-tailwindcss",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ],
            "settings": {
                "typescript.preferences.importModuleSpecifier": "relative",
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[javascript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                }
            }
        },
        "devpod": {
            "prebuildRepository": "ghcr.io/ricable/polyglot-devenv-typescript"
        }
    },
    "containerEnv": {
        "NODE_ENV": "development",
        "NPM_CONFIG_UPDATE_NOTIFIER": "false"
    },
    "mounts": [
        "type=volume,source=npm-cache,target=/home/vscode/.npm",
        "type=volume,source=node-modules,target=/workspace/node_modules"
    ],
    "forwardPorts": [3000, 8080, 5173],
    "portsAttributes": {
        "3000": {
            "label": "Frontend Development Server",
            "onAutoForward": "notify"
        },
        "8080": {
            "label": "API Server",
            "onAutoForward": "notify"
        },
        "5173": {
            "label": "Vite Development Server",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": [
        "echo 'Setting up TypeScript environment...'",
        "npm install",
        "echo 'TypeScript environment ready'"
    ],
    "postStartCommand": "echo 'TypeScript DevPod ready. Run: npm run dev'",
    "postAttachCommand": "echo 'Welcome to TypeScript DevPod! ðŸ“˜'"
}