{
    "name": "Polyglot Go Development Environment",
    "image": "mcr.microsoft.com/devcontainers/go:1.22-bullseye",
    
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": true
        },
        "ghcr.io/devcontainers/features/github-cli:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "enableNonRootDocker": true
        },
        "ghcr.io/devcontainers/features/go:1": {
            "version": "1.22"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-json",
                "github.vscode-github-actions",
                "github.vscode-pull-request-github",
                "eamodio.gitlens",
                "golang.go",
                "golang.go-nightly",
                "mkhl.direnv"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.rulers": [88, 100, 120],
                "files.trimTrailingWhitespace": true,
                "git.autofetch": true,
                "terminal.integrated.defaultProfile.linux": "zsh",
                "go.useLanguageServer": true,
                "go.lintOnSave": "package",
                "go.formatTool": "goimports"
            }
        },
        "devpod": {
            "prebuildRepository": "ghcr.io/ricable/polyglot-devenv-go"
        }
    },

    "containerEnv": {
        "TERM": "xterm-256color",
        "COLORTERM": "truecolor",
        "GO111MODULE": "on",
        "GOPROXY": "https://proxy.golang.org,direct"
    },

    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "type=volume,source=vscode-server-extensions,target=/home/vscode/.vscode-server/extensions",
        "type=volume,source=go-cache,target=/home/vscode/go/pkg"
    ],

    "forwardPorts": [8080, 3000],
    "portsAttributes": {
        "8080": {
            "label": "API Server",
            "onAutoForward": "notify"
        },
        "3000": {
            "label": "Frontend Development Server",
            "onAutoForward": "notify"
        }
    },

    "postCreateCommand": [
        "echo 'Setting up Go environment...'",
        "go mod download",
        "echo 'Go environment ready'"
    ],

    "postStartCommand": "echo 'Go DevPod ready. Run: go run ./cmd'",
    
    "postAttachCommand": "echo 'Welcome to Go DevPod! üêπ'",

    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    
    "remoteUser": "vscode",
    "updateRemoteUserUID": true
}