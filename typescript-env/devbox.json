{
  "packages": ["nodejs@20", "typescript@latest"],
  "shell": {
    "init_hook": [
      "echo 'TypeScript Development Environment'",
      "node --version",
      "npm --version",
      "tsc --version"
    ],
    "scripts": {
      "install":    "npm install",
      "build":      "npm run build",
      "dev":        "npm run dev",
      "format":     "npm run format",
      "lint":       "npm run lint",
      "test":       "npm run test",
      "test-watch": "npm run test -- --watch",
      "clean":      "rm -rf dist node_modules/.cache",
      "type-check": "npm run type-check"
    }
  },
  "env": {
    "NODE_ENV": "development"
  }
}
